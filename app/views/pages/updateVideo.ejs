<%- include('../partials/head'); %>
<%- include('../partials/navbar'); %>
<img src="/thumbnail/<%= data.url_thumbnail%>" width="300px">
<form ref='uploadForm' 
id='uploadForm' 
action='/update/<%= data.id%>' 
method='post' 
encType="multipart/form-data">
  <div class="mb-3">
    <label for="title" class="form-label">Titre</label>
    <input type="text" class="form-control" id="title" name="title" aria-describedby="emailHelp" value="<%= data.title%>">
  </div>
  <div class="mb-3">
    <label for="description" class="form-label">Description</label>
    <textarea name="description" class="form-control" id="description" rows="3"><%= data.description%></textarea>
  </div>

  <div class="form-check">
    <input class="form-check-input" type="radio" name="public" id="flexRadioDefault1" value="true"
    <% if (data.public) { %>
      checked
    <% } %>
    >
    <label class="form-check-label" for="flexRadioDefault1">
      
      Public
    </label>
  </div>
  <div class="form-check">
    <input class="form-check-input" type="radio" name="public" id="flexRadioDefault2" value="false"
    <% if (!data.public) { %>
      checked
    <% } %>
    
    >
    <label class="form-check-label" for="flexRadioDefault2">
      Private
    </label>
  </div>




  <button type="submit" class="btn btn-primary">Submit</button>
</form>
<%- include('../partials/footer'); %>